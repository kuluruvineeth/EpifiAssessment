<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EpifiAssessment" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="PanHeaderTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/ps_header</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PanSubHeaderTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/ps_sub_header</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InputHintTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/input_hint</item>
    </style>

    <style name="InputBirthdayEditText" parent="Widget.AppCompat.EditText">
        <item name="android:maxLines">1</item>
        <item name="android:padding">15dp</item>
        <item name="android:inputType">number</item>
        <item name="android:background">@drawable/bg_rounded_edit_text</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="PanFooterTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/purple_700</item>
        <item name="android:textSize">@dimen/ps_footer</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
</resources>